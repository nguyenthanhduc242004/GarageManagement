<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRepairCardActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:backgroundTint="@color/white"
            android:contentDescription="back"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="PHIẾU SỬA CHỮA"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvChooseCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading"
            android:layout_marginTop="12dp"
            android:textColor="@color/textColor"
            android:text="Chọn Xe:"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChooseCar"
            android:layout_marginTop="12dp"
            android:padding="4dp"
            android:background="@drawable/border"
            />

        <Button
            android:id="@+id/showCarInformationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Cơ Bản"
            android:layout_marginTop="12dp"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="0dp"
            android:drawableLeft="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_below="@+id/spinner"/>


    </RelativeLayout>
</RelativeLayout>