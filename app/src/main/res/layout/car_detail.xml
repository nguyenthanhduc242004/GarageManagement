<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLicensePlateText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/tvPhoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Biển Số Xe"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvLicensePlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLicensePlateText"
        android:layout_alignBottom="@+id/tvLicensePlateText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvOwnerNameText"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvCarBrandText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tvLicensePlateText"
        android:layout_alignEnd="@+id/tvPhoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Hãng Xe"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvCarBrand"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCarBrandText"
        android:layout_alignBottom="@+id/tvCarBrandText"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvCarBrandText"
        android:textColor="@color/textColor" />



    <TextView
        android:id="@+id/tvCarTypeText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tvCarBrandText"
        android:layout_alignEnd="@+id/tvPhoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Loại Xe"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCarTypeText"
        android:layout_alignBottom="@+id/tvCarTypeText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvCarTypeText"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvOwnerNameText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tvCarTypeText"
        android:layout_alignEnd="@+id/tvPhoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Tên Chủ Xe"
        android:textColor="@color/textColor" />


    <TextView
        android:id="@+id/tvOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvOwnerNameText"
        android:layout_alignBottom="@+id/tvOwnerNameText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvOwnerNameText"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvPhoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tvOwnerNameText"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Số Điện Thoại"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvPhoneNumberText"
        android:layout_alignBottom="@+id/tvPhoneNumberText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvPhoneNumberText"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvReceiveDateText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tvPhoneNumberText"
        android:layout_alignEnd="@+id/tvPhoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Ngày Nhận"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvReceiveDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvReceiveDateText"
        android:layout_alignBottom="@+id/tvReceiveDateText"
        android:layout_toEndOf="@+id/tvReceiveDateText"
        android:text="12/12/2023"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/buttonOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReceiveDateText"
        android:layout_marginTop="12dp"
        android:enabled="false"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:text="Ảnh Chụp:"
        android:textColor="@color/textColor" />

    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="240dp"
        android:layout_below="@+id/buttonOpenCamera"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>