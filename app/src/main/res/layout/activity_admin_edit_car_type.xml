<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivities.AdminAddCarBrandActivity"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SỬA LOẠI XE"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:contentDescription="back"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <LinearLayout
            android:id="@+id/oldCarBrandWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButtonBack"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:text="Tên cũ: "
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvOldCarType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oldCarTypeText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etCarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oldCarBrandWrapper"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Nhập Loại Xe"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/textColor"
            android:textColorHint="#aaa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCarType"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:paddingVertical="12dp"
            android:text="Thêm Loại Xe"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:strokeColor="#000"
            app:strokeWidth="2dp" />
    </RelativeLayout>
</RelativeLayout>