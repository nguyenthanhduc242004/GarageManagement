<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivities.AdminHomeActivity"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCarBrandManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:textSize="16sp"
            app:strokeWidth="2dp"
            app:strokeColor="#000"
            android:text="Quản Lý Hãng Xe"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCarTypeManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:textSize="16sp"
            app:strokeWidth="2dp"
            app:strokeColor="#000"
            android:text="Quản Lý Loại Xe"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCarServiceManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:textSize="16sp"
            app:strokeWidth="2dp"
            app:strokeColor="#000"
            android:text="Quản Lý Dịch Vụ"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCarSupplyManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:textSize="16sp"
            app:strokeWidth="2dp"
            app:strokeColor="#000"
            android:text="Quản Lý Vật Tư, Dung Dịch"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:textSize="16sp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/red"
            android:text="Đăng Xuất"
            android:textColor="@color/red"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>
</RelativeLayout>