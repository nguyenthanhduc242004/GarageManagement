<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivities.AdminCarBrandManagementActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="QUẢN LÝ LOẠI XE"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:contentDescription="back"
            app:srcCompat="@drawable/baseline_arrow_back_24" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAdd"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_below="@id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="8dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/textColor"
            android:text="Thêm Loại Xe"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            android:paddingVertical="8dp"
            android:layout_below="@+id/buttonAdd"
            android:background="@drawable/square_border">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên Dịch Vụ"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hành Động"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCarBrandManagement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>